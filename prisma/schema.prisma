generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Order {
  orderId       String          @id
  customerName  String
  phone         String?
  product       String
  total         Float
  orderStatus   String
  payStatus     String
  shipStatus    String
  shipDetail    String?
  date          DateTime
  printStatus   String
  imageLink     String?
  createdAt     DateTime        @default(now())

  // Relation to custom designs
  customDesigns CustomDesign[]  @relation("OrderCustomDesigns")
}

model CustomDesign {
  id           String    @id @default(cuid())
  url          String
  orderId      String
  type         String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relation back to Order
  order        Order     @relation("OrderCustomDesigns", fields: [orderId], references: [orderId], onDelete: Cascade)
}

model PredesignedDesign {
  id        String    @id @default(cuid())
  designId  String    @unique
  url       String
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
